<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:myControl="clr-namespace:AR.Drone.WinApp.MyUserControl">

    <!--Address DataTemplates-->
    <DataTemplate x:Key="ComboCollapsed" >
        <Grid>
            <TextBlock Foreground="#FEE9AF" Text="{Binding Path=ItemText}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="ComboExpanded" >
        <Grid>
            <myControl:ImageThreeStateButton VerticalAlignment="Center" HorizontalAlignment="Left"
                                                 DownImagePath="../Image/PlaneStatePage/ComboBoxItemDelete.png"
                                                 HoverImagePath="../Image/PlaneStatePage/ComboBoxItemDelete.png"
                                                 NormalImagePath="../Image/PlaneStatePage/ComboBoxItemDelete.png" Margin="139,0,-50,4"/>
            <TextBlock Foreground="#FEE9AF" Text="{Binding Path=ItemText}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </Grid>
    </DataTemplate>
    <!--End Address DataTemplates-->
</ResourceDictionary>